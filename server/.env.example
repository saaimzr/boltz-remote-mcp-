# Boltz MCP Server Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Transport mode: "stdio" (local) or "http" (remote)
# Default: http
BOLTZ_TRANSPORT=http

# Host to bind to
# 0.0.0.0 = listen on all network interfaces (required for remote access)
# 127.0.0.1 = localhost only (local testing)
BOLTZ_HOST=0.0.0.0

# Port to listen on
BOLTZ_PORT=8000

# Optional: Bearer token for authentication
# If set, clients must provide this token to access the server
# Generate a secure token: python -c "import secrets; print(secrets.token_urlsafe(32))"
# BOLTZ_AUTH_TOKEN=your_secure_token_here

# ============================================================================
# GPU CONFIGURATION
# ============================================================================

# Comma-separated list of GPU device IDs to use
# Examples:
#   CUDA_VISIBLE_DEVICES=0        # Use only GPU 0
#   CUDA_VISIBLE_DEVICES=0,1      # Use GPUs 0 and 1
#   CUDA_VISIBLE_DEVICES=1,2,3    # Use GPUs 1, 2, and 3
CUDA_VISIBLE_DEVICES=0

# ============================================================================
# BOLTZ CONFIGURATION
# ============================================================================

# Default recycling steps (improves accuracy, increases compute time)
# Range: 1-10, recommended: 3
DEFAULT_RECYCLING_STEPS=3

# Default sampling steps (more steps = better quality, slower)
# Range: 50-500, recommended: 200
DEFAULT_SAMPLING_STEPS=200

# Number of diffusion samples to generate per prediction
# More samples = more diverse outputs, more compute time
DEFAULT_DIFFUSION_SAMPLES=1

# ============================================================================
# STORAGE CONFIGURATION
# ============================================================================

# Maximum upload file size in MB
# Default: 100MB
MAX_UPLOAD_SIZE_MB=100

# Server log level
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
